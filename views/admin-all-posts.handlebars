{{#each posts as |post|}}

  <div class="post card">
    <div class="card-header">
      <h2>{{post.title}}</h2>
    </div>
    <div class="card-body">
      <p>{{post.body}}</p>
    </div>
    <div class="card-footer">
      <a href="/dashboard/delete/{{post.id}}">Delete</a>
      <a href="/dashboard/post/edit/{{post.id}}">Edit</a>
      <a href=""></a>
    </div>
  </div>
{{/each}}